# **************************************************************************** #
#                                    Names                                     #
# **************************************************************************** #

EXEC	= FdF
MLX		= libmlx.a

# **************************************************************************** #
#                                    Path's                                    #
# **************************************************************************** #

FILE	= main

SRC	= $(addprefix ./, $(addsuffix .c, $(FILE)))
OBJ	= $(addprefix ./, $(addsuffix .o, $(FILE)))

# **************************************************************************** #
#                                  Compiler                                    #
# **************************************************************************** #

CC		= cc
CFLAGS	= -Werror -Wextra -Wall

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CC) $(OBJ) -Lmlx_linux -lmlx_Linux -L/usr/lib -Imlx_linux -lXext -lX11 -lm -lz -o $(EXEC)

%.o: %.c
	$(CC) -I/usr/include -Imlx_linux -O3 -c $< -o $@

clean:
	@rm -rf $(OBJ)

fclean: clean
	@rm -rf $(EXEC)

re: fclean all
